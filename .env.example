# =============================================
# Tyr Bot - Environment Configuration
# =============================================

# Discord Bot Token
DISCORD_TOKEN=your_bot_token_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DATABASE=Tyr

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Bot Configuration
BOT_PREFIX=!
OWNER_IDS=123456789012345678,234567890123456789

# =============================================
# Web Dashboard Configuration
# =============================================

# Server Settings
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_DEBUG=false

# Discord OAuth2
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:8080/api/auth/callback

# JWT Secret (generate a random string)
# You can use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your_super_secret_jwt_key_here

# Bot URLs
BOT_INVITE_URL=https://discord.com/api/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=8&scope=bot%20applications.commands
SUPPORT_SERVER=https://discord.gg/your_support_server
